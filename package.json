{
  "name": "opengravity",
  "displayName": "opengravity",
  "description": "An AI workflow platform.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:opengravity.ask"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "opengravity.ask",
        "title": "Opengravity: Ask a Question"
      }
    ],
    "configuration": [
      {
        "title": "Opengravity",
        "properties": {
          "opengravity.provider": {
            "type": "string",
            "enum": [
              "deepseek",
              "gemini"
            ],
            "default": "deepseek",
            "description": "选择大语言模型"
          },
          "opengravity.apiKey": {
            "type": "string",
            "default": "",
            "description": "API密钥 请妥善保管"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.1.0",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "openai": "^6.17.0"
  }
}
